{
    "name": "qml-format",
    "displayName": "QML Format",
    "description": "Automatic formatter for QML files.",
    "publisher": "Delgan",
    "icon": "assets/icon.png",
    "repository": {
        "url": "https://github.com/Delgan/qml-format",
        "type": "git"
    },
    "version": "1.0.3",
    "engines": {
        "vscode": "^1.49.0"
    },
    "keywords": [
        "qml",
        "format",
        "qmlformat",
        "formatting",
        "formatter",
        "qt"
    ],
    "extensionKind": [
        "workspace"
    ],
    "categories": [
        "Formatters"
    ],
    "activationEvents": [
        "onLanguage:qml"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "configuration": {
            "title": "QML Format",
            "properties": {
                "qmlFormat.command": {
                    "type": "string",
                    "default": "qmlformat",
                    "description": "Command used to format QML files (an absolute path can be configured)."
                },
                "qmlFormat.extraArguments": {
                    "type": "array",
                    "default": [],
                    "description": "Optional additional arguments that will be passed to the command.",
                    "items": {
                        "type": "string"
                    }
                }
            }
        },
        "languages": [
            {
                "id": "qml",
                "aliases": [
                    "QML"
                ],
                "extensions": [
                    "qml"
                ]
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/glob": "^7.2.0",
        "@types/mocha": "^9.1.1",
        "@types/node": "16.x",
        "@types/vscode": "^1.49.0",
        "@typescript-eslint/eslint-plugin": "^5.30.0",
        "@typescript-eslint/parser": "^5.30.0",
        "@vscode/test-electron": "^2.1.5",
        "eslint": "^8.18.0",
        "glob": "^8.0.3",
        "mocha": "^10.0.0",
        "typescript": "^4.7.4"
    }
}
